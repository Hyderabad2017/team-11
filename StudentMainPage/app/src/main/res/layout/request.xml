<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sumanth.studentmainpage.StudentMainPage$PlaceholderFragment">

    <EditText
        android:id="@+id/med_txt"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:visibility="visible"
        tools:ignore="LabelFor,TextFields"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/exam_txt" />

    <TextView
        android:id="@+id/exam_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="Exam : "
        android:textSize="36sp"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:visibility="visible"
        tools:ignore="LabelFor,TextFields"
        android:id="@+id/city_txt"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/med_txt" />

    <Spinner
        android:id="@+id/exam_spn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exam_txt"
        android:layout_alignEnd="@+id/city_txt"
        android:layout_alignStart="@+id/date_txt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exam_txt"
        android:layout_marginTop="22dp"
        android:layout_toStartOf="@+id/city_txt"
        android:text="Medium Of Exam : "
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="52dp"
        android:text="Date : "
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="64dp"
        android:text="City : "
        android:textSize="36sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:id="@+id/date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/city_txt"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginStart="11dp"
        android:ems="10"
        android:inputType="date"
        android:layout_alignEnd="@+id/med_txt" />
</RelativeLayout>
